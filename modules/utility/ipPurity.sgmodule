#!name=IP-Pure
#!desc=节点 IP 纯净度检测（IPPure）,请先在参数内选择策略组。
#!category=网络检测
#!arguments=Proxy:DIRECT,MarkIP:false
#!arguments-desc=Proxy: 选择策略组,默认DIRECT. @from wish | MarkIP: IP 打码(true/false),默认 false

[Rule]
# 确保检测请求走选定的代理策略
DOMAIN-SUFFIX,ippure.com,{{{Proxy}}}

[Panel]
IP-Pure = script-name=IP-Pure, title=IP 纯净度, content=刷新中…, style=info, update-interval=300

[Script]
IP-Pure = type=generic, timeout=10, argument={{{MarkIP}}}, script-path=https://raw.githubusercontent.com/Likhixang/Egerny/main/js/IPPure.js
